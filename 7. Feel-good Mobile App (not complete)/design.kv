<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text:"User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text:"Password"
            Button:
                text:"Login"
        GridLayout:
            cols: 2
            Button:
                text:"Forgot Password"
            Button:
                text:"Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Sign Up for a Space Journey"
        TextInput:
            id: username
            hint_text: "Usename"
        TextInput:
            id: pass
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.pass.text)


<RootWidget>:
    LoginScreen:
        name:"login_Screen"
    SignUpScreen:
        name:"sign_up_screen"